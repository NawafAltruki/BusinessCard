<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/back_4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/f1ccc468_6d77_4d0a_a93a_95db9bfc64e0_png"
            app:civ_border_color="@color/border_700"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_2"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Nawaf Turki"
            android:textColor="@color/back_3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_3"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="I am nawaf altruki, graduate student form universty of hafar albatin as a software engineer. And now i study in Twuaiq Academy in Android app development camp."
            android:textColor="@color/back_1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtConInfo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_2"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="Contact Informations"
            android:textColor="@color/back_3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtConInfo2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_3"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="0509532210\n Nalturki1999@outlook.sa"
            android:textColor="@color/back_1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_2"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/back_3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocation2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_3"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="Riaydh"
            android:textColor="@color/back_1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtAnother"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/tv_border"
            android:backgroundTint="@color/back_2"
            android:fontFamily="@font/abeezee"
            android:gravity="center"
            android:text="@string/another_information"
            android:textColor="@color/back_3"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>



</ScrollView>

